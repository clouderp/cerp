<odoo>
  <record id="message_wizard_form" model="ir.ui.view">
    <field name="name">message.wizard.form</field>
    <field name="model">cerp_core.message.wizard</field>
    <field name="arch" type="xml">
      <form>
        <p class="text-center">
          <field name="message"/>
        </p>
        <footer>
          <button
	      name="action_ok"
	      string="Ok"
	      type="object"
	      default_focus="1"
	      class="oe_highlight"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
